<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:hint="@string/ediTextApellidos"
        android:id="@+id/EdiTextApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="@string/ediTextNombre"
        android:id="@+id/EdiTextNombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="@string/ediTextCedula"
        android:id="@+id/EdiTextCedula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:hint="@string/buttonGuardar"
        android:id="@+id/ButtonGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:hint="@string/buttonMOstrar"
        android:id="@+id/ButtonMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</LinearLayout>